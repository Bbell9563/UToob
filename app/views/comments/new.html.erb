<h1>Add A comment</h1>
<%= form_with(model: [@movie, @comment], locale: true) do |f| %>
  <%= f.text_field :user_id, :value => current_user.id, :readonly => true, :hidden => true %>
  <%= f.label :user %>
  <%= f.text_field :user_id, :value => current_user.id, :readonly => true, :hidden => true%>
  <%= f.text_field :user_id, required: true, :value => current_user.id%>
  <%= f.label :body %>
  <%= f.text_area :body, required: true%>
  <%= f.text_field :user_id, :value => current_user.id, :readonly => true%>
  <%= f.label :body %>
  <%= f.text_area :body, :require => true%>
  <br />
  <%= f.submit nil %>
<% end %>
